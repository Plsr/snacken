<% dummy_emojis = %w[🍟 🍲 🍔 🍝 🧆 🌱 🌯] %>
<% dummy_emojis_filtered = dummy_emojis.sample(meal_plan.recipes.count) %>

<div class="Card MealPlanCard">
  <div class="flex flex-col lg:flex-row justify-between h-full">
    <div class="flex flex-1 flex-col MealPlanCard__section-with-border pb-6 lg:pb-0">
      <div>
        <%= link_to meal_plan_path(meal_plan) do %>
          <h3 class="CardTitle">Meal plan from <%= meal_plan.created_at.strftime("%B %d") %></h3>
        <% end %>
        <small class="MealPlanCard__created-at">created on <%= meal_plan.created_at.strftime("%B %d, %Y") %></small>
      </div>
      <div class="mt-6 lg:mt-auto">
        <h4 class="MealPlanCard__meal-count"><%= meal_plan.recipes.count %> Meals</h4>
        <div class="MealPlanCard__divider"></div>
        <p class="MealPlanCard__emojis"><%= dummy_emojis_filtered.join(" ") %></p>
      </div>
    </div>
    <div class="flex flex-1 flex-col justify-between mt-6 lg:ml-6 lg:mt-0">
      <% meal_plan.recipes.each_with_index do |recipe, index| %>
        <h5 class="RecipeTitle">
          <span class="RecipeTitle__emoji"><%= dummy_emojis_filtered[index] %></span>
          <span class="RecipeTitle__name"><%= recipe.name %></span>
        </h5>
      <% end %>
    </div>
  </div>
</div>

