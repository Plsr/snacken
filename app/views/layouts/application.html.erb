<!DOCTYPE html>
<html>
  <head>
    <% if Rails.env.production? %>
      <script id="Cookiebot" src="https://consent.cookiebot.com/uc.js" data-cbid="<%= ENV['COOKIEBOT_TOKEN'] %>" data-blockingmode="auto" type="text/javascript"></script>
    <% end %>
    <title>Dishbot</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@400;600;700&display=swap" rel="stylesheet"> 
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;700&display=swap" rel="stylesheet">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= favicon_link_tag 'favicon.jpg' %>

    <% if Rails.env.production? %>
      <!-- Global site tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=G-C5KZ86EY4B"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', <%= ENV["G_TAG"] %>, { 'anonymize_ip': true });
      </script>
    <% end %>
  </head>

  <body class="bg-gray-100">
    <%= render 'layouts/header' %>
    <div class="fixed ml-6 mt-6">
      <% if flash[:notice] %>
        <div data-controller="flash" data-target="flash.flash" class="shadow-lg mx-auto p-4 bg-blue-500 mb-3 text-white text-style-bold rounded" id="notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div data-controller="flash" data-target="flash.flash" class="shadow-lg mx-auto p-4 bg-red-500 text-white text-style-bold rounded" id="alert"><%= flash[:alert] %></div>
      <% end %>
    </div>
    <div class="container mx-auto p-4">
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
