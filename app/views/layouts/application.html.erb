<!DOCTYPE html>
<html>
  <head>
    <title>Snacken</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@400;500;700&display=swap" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body class="bg-gray-100">
    <%= render 'layouts/header' %>
    <div class="fixed ml-6 mt-6">
      <% if flash[:notice] %>
        <div data-controller="flash" data-target="flash.flash" class="shadow-lg mx-auto p-4 bg-blue-500 mb-3 text-white text-style-bold rounded" id="notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div data-controller="flash" data-target="flash.flash" class="shadow-lg mx-auto p-4 bg-red-500 text-white text-style-bold rounded" id="alert"><%= flash[:alert] %></div>
      <% end %>
    </div>
    <div class="container mx-auto p-4">
      <%= yield %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
